<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ListFragment">
    
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:entries="@array/restaurants"
        android:prompt="@string/restaurants_prompt"
        android:id="@+id/restaurants_spinner"
        android:textAlignment="center">
    </Spinner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/date_spinner">
        </Spinner>

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/meal_spinner">
        </Spinner>

    </LinearLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/food_select">
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:checked="true"
            android:id="@+id/first_food"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/second_food"/>

    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/roundedbutton"
        android:elevation="10dp"
        android:text="خرید ژتون"
        android:textColor="@color/colorPrimaryText"
        android:textSize="30sp"
        android:id="@+id/buy_meal"
        />

    <view class="android.support.v7.app.AlertController$RecycleListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bought_recycle"
        android:scrollbars="vertical">
    </view>

</LinearLayout>